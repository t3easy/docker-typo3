{
    "name": "t3easy/typo3-bootcamp",
    "type": "project",
    "description": "Environment to develop and run TYPO3 in Docker containers",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Jan Kiesewetter",
            "email": "jan@t3easy.de"
        }
    ],
    "require": {
        "helhum/typo3-console": "^6.4.0",
        "helhum/typo3-secure-web": "^0.3.1",
        "typo3/cms-backend": "^11.1",
        "typo3/cms-belog": "^11.1",
        "typo3/cms-beuser": "^11.1",
        "typo3/cms-core": "^11.1",
        "typo3/cms-dashboard": "^11.1",
        "typo3/cms-extbase": "^11.1",
        "typo3/cms-extensionmanager": "^11.1",
        "typo3/cms-felogin": "^11.1",
        "typo3/cms-filelist": "^11.1",
        "typo3/cms-fluid": "^11.1",
        "typo3/cms-fluid-styled-content": "^11.1",
        "typo3/cms-form": "^11.1",
        "typo3/cms-frontend": "^11.1",
        "typo3/cms-impexp": "^11.1",
        "typo3/cms-info": "^11.1",
        "typo3/cms-install": "^11.1",
        "typo3/cms-recordlist": "^11.1",
        "typo3/cms-redirects": "^11.1",
        "typo3/cms-rte-ckeditor": "^11.1",
        "typo3/cms-scheduler": "^11.1",
        "typo3/cms-seo": "^11.1",
        "typo3/cms-setup": "^11.1",
        "typo3/cms-sys-note": "^11.1",
        "typo3/cms-t3editor": "^11.1",
        "typo3/cms-tstemplate": "^11.1",
        "typo3/cms-viewpage": "^11.1"
    },
    "require-dev": {
        "typo3/cms-adminpanel": "^11.1",
        "typo3/cms-lowlevel": "^11.1",
        "typo3/cms-reports": "^11.1"
    },
    "config": {
        "platform": {
            "php": "7.4.15"
        },
        "sort-packages": true
    },
    "extra": {
        "typo3/cms": {
            "root-dir": "private",
            "web-dir": "public"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@typo3-cms-scripts"
        ],
        "typo3-cms-scripts": [
            "typo3cms install:fixfolderstructure",
            "typo3cms install:generatepackagestates"
        ]
    }
}
